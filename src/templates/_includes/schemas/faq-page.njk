<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for category in faq.categories %}
      {% for item in category.questions %}
    {
      "@type": "Question",
      "name": "{{ item.question }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ item.answer }}"
      }
    }{% if not loop.last %},{% endif %}
      {% endfor %}
      {% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
