<!DOCTYPE html>
<html lang="{{ lang | default('es') }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- SEO Meta Tags -->
  {% if program.seo %}
    {% set pageSeo = program.seo %}
  {% elif post.seo %}
    {% set pageSeo = post.seo %}
  {% elif seo %}
    {% set pageSeo = seo %}
  {% else %}
    {% set pageSeo = {} %}
  {% endif %}
  <title>{% if pageSeo.title %}{{ pageSeo.title }}{% else %}{{ title }}{{ pageSeo.titleSuffix | default(' | vaemptîness') }}{% endif %}</title>
  <meta name="description" content="{% if pageSeo.description %}{{ pageSeo.description }}{% else %}{{ site.description }}{% endif %}">
  {% if pageSeo.keywords %}<meta name="keywords" content="{{ pageSeo.keywords }}">{% endif %}
  <meta name="author" content="{{ site.author }}">
  <meta name="language" content="{{ lang | default('es') }}">
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="{% if pageSeo.ogType %}{{ pageSeo.ogType }}{% else %}website{% endif %}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:title" content="{% if pageSeo.title %}{{ pageSeo.title }}{% else %}{{ title }}{{ pageSeo.titleSuffix | default(' | vaemptîness') }}{% endif %}">
  <meta property="og:description" content="{% if pageSeo.description %}{{ pageSeo.description }}{% else %}{{ site.description }}{% endif %}">
  <meta property="og:image" content="{{ site.url }}{% if pageSeo.ogImage %}{{ pageSeo.ogImage }}{% else %}{{ pageSeo.defaultOgImage | default('/assets/images/og-default.jpg') }}{% endif %}">
  <meta property="og:locale" content="es_ES">
  <meta property="og:site_name" content="vaemptîness">

  <!-- Twitter -->
  <meta property="twitter:card" content="{{ pageSeo.twitterCard | default('summary_large_image') }}">
  <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
  <meta property="twitter:title" content="{% if pageSeo.title %}{{ pageSeo.title }}{% else %}{{ title }}{{ pageSeo.titleSuffix | default(' | vaemptîness') }}{% endif %}">
  <meta property="twitter:description" content="{% if pageSeo.description %}{{ pageSeo.description }}{% else %}{{ site.description }}{% endif %}">
  <meta property="twitter:image" content="{{ site.url }}{% if pageSeo.twitterImage %}{{ pageSeo.twitterImage }}{% else %}{{ pageSeo.defaultTwitterImage | default('/assets/images/twitter-card-default.jpg') }}{% endif %}">

  <!-- Additional SEO -->
  <meta name="robots" content="{% if pageSeo.robots %}{{ pageSeo.robots }}{% else %}index, follow{% endif %}">
  <meta name="googlebot" content="index, follow">
  <meta name="theme-color" content="#b85c4f">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">

  {% block head %}{% endblock %}

  <!-- Schema.org Markup -->
  {% include "schemas/local-business.njk" %}
  {% block schema %}{% endblock %}
</head>
<body class="{{ bodyClass }}" data-lang="{{ lang | default('es') }}">
  {% include "header.njk" %}

  <main id="main-content">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <!-- Scripts -->
  <script src="{{ '/assets/js/main.js' | url }}"></script>
  {% block scripts %}{% endblock %}
</body>
</html>
