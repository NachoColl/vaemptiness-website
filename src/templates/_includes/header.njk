          <li class="has-dropdown">
            <a href="#" class="dropdown-toggle{% if '/vaemptiness-kids/' in page.url or '/vaemptiness-teen/' in page.url or '/vaemptiness-program/' in page.url or '/vaemptiness-equipos/' in page.url %} active{% endif %}">Programas</a>
            <ul class="dropdown-menu">
              <li><a href="{{ '/vaemptiness-program/' | url }}" {% if '/vaemptiness-program/' in page.url %}class="active"{% endif %}>vaemptîness program</a></li>
