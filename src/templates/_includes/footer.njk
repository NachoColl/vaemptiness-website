<footer class="site-footer">
  <div class="container">
    <!-- Desktop Footer -->
    <div class="footer-content footer-desktop">
      <div class="footer-main">
        <div class="footer-brand">
          <img src="{{ '/assets/images/logo.png' | url }}" alt="{{ site.title }} - {{ site.tagline }}" class="footer-logo-image">
        </div>
        <p class="footer-description">{{ site.description }}</p>
        <div class="footer-socials">
          <a href="https://www.linkedin.com/company/vaemptiness/" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
          </a>
          <a href="https://www.instagram.com/vaemptiness" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <i class="fa-brands fa-instagram" aria-hidden="true"></i>
          </a>
          <a href="https://www.tiktok.com/@vaemptiness" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
            <i class="fa-brands fa-tiktok" aria-hidden="true"></i>
          </a>
        </div>
      </div>

      <div class="footer-links">
        {% for section in site.footer.sections %}
        <nav class="footer-nav">
          <h3>{{ section.title }}</h3>
          <ul>
            {% for link in section.links %}
            <li><a href="{{ link.url | url }}">{{ link.text }}</a></li>
            {% endfor %}
          </ul>
        </nav>
        {% endfor %}
      </div>
    </div>

    <div class="footer-bottom footer-desktop">
      <p class="copyright">{{ site.footer.copyright }}</p>
      <nav class="footer-legal">
        <ul>
          {% for link in site.footer.legalLinks %}
          <li><a href="{{ link.url | url }}">{{ link.text }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </div>

    <!-- Mobile Footer -->
    <div class="footer-mobile">
      <div class="footer-mobile-brand">
        <img src="{{ '/assets/images/logo.png' | url }}" alt="{{ site.title }}" class="footer-mobile-logo">
        <p class="footer-mobile-tagline">{{ site.tagline }}</p>
      </div>
      <div class="footer-socials">
        <a href="https://www.linkedin.com/company/vaemptiness/" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
          <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
        </a>
        <a href="https://www.instagram.com/vaemptiness" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
          <i class="fa-brands fa-instagram" aria-hidden="true"></i>
        </a>
        <a href="https://www.tiktok.com/@vaemptiness" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
          <i class="fa-brands fa-tiktok" aria-hidden="true"></i>
        </a>
      </div>
      <nav class="footer-mobile-links">
        <ul>
          {% for link in site.footer.mobile.links %}
          <li><a href="{{ link.url | url }}">{{ link.text }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
</footer>
