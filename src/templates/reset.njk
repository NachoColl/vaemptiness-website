---
layout: base.njk
---
{% set pageData = pages.reset.content %}

<section class="page-hero">
  <div class="container">
    <h1 class="page-title">{{ pageData.hero.title }}</h1>
    <p class="page-subtitle">{{ pageData.hero.subtitle }}</p>
  </div>
</section>

<section class="reset-content">
  <div class="container">
    <div class="content-section centered">
      <h2>{{ pageData.intro.title }}</h2>
      {% for paragraph in pageData.intro.paragraphs %}
      <p>{{ paragraph | safe }}</p>
      {% endfor %}
      <p class="quote-large">{{ pageData.intro.quote | safe }}</p>
    </div>

    {% for section in pageData.resetSections %}
    <div class="reset-section">
      <div class="reset-image">
        <img src="{{ section.image }}" alt="{{ section.imageAlt }}" loading="lazy">
      </div>
      <div class="reset-text">
        <h2>{{ section.title }}</h2>
        <p class="reset-description">{{ section.description }}</p>
        <p class="reset-action">{{ section.action | safe }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{{ pageData.cta.title }}</h2>
      <p class="cta-description">{{ pageData.cta.description }}</p>
      <a href="{{ pageData.cta.buttonUrl | url }}" class="button button-primary">{{ pageData.cta.buttonText }}</a>
    </div>
  </div>
</section>
