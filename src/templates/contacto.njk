---
layout: base.njk
---
{% set pageData = pages.contacto.content %}

<section class="page-hero">
  <div class="container">
    <h1 class="page-title">{{ pageData.hero.title }}</h1>
    <p class="page-subtitle">{{ pageData.hero.subtitle }}</p>
  </div>
</section>

<section class="contact-section">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-info">
        <p class="contact-description">{{ pageData.description }}</p>
      </div>

      <div class="contact-form-wrapper">
        <h2>Envíanos un mensaje</h2>
        <form action="{{ pageData.form.getformEndpoint }}" method="POST" class="contact-form" id="contact-form">
          <div class="form-group">
            <label for="name">Nombre <span class="required">*</span></label>
            <input type="text" name="name" id="name" required>
          </div>

          <div class="form-group">
            <label for="email">Email <span class="required">*</span></label>
            <input type="email" name="email" id="email" required>
          </div>

          <div class="form-group">
            <label for="phone">Teléfono</label>
            <input type="tel" name="phone" id="phone">
          </div>

          <div class="form-group">
            <label for="topic">Tema <span class="required">*</span></label>
            <select name="topic" id="topic" required>
              <option value="" disabled selected>Selecciona un tema</option>
              {% for topic in pageData.form.topics %}
              <option value="{{ topic }}">{{ topic }}</option>
              {% endfor %}
            </select>
          </div>

          <div class="form-group form-group-full">
            <label for="message">Mensaje <span class="required">*</span></label>
            <textarea name="message" id="message" rows="6" required></textarea>
          </div>

          <button type="submit" class="button button-primary">Enviar mensaje</button>

          <div class="form-status" id="form-status"></div>
        </form>
      </div>
    </div>
  </div>
</section>

<script src="{{ '/assets/js/contact-form.js' | url }}"></script>
