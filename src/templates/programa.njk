---
layout: base.njk
bodyClass: program-page
pagination:
  data: collections.programsFromFiles
  size: 1
  alias: program
permalink: /{{ program.slug }}/
title: "{{ program.name }} - vaemptîness"
---

{% if program.hero %}
<section class="program-hero">
  <div class="container">
    <div class="program-hero-content">
      {% if program.hero.title %}
      <h1 class="program-hero-title">{{ program.hero.title }}</h1>
      {% endif %}

      {% if program.hero.subtitle %}
      <p class="program-hero-subtitle">{{ program.hero.subtitle }}</p>
      {% endif %}
      {% if program.hero.description %}
      <p class="program-hero-description">{{ program.hero.description }}</p>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% if program.whatIs %}
<section class="program-what-is">
  <div class="container">
    <div class="what-is-content centered">
      {% if program.whatIs.title %}
      <h2 class="section-title">{{ program.whatIs.title }}</h2>
      {% endif %}

      {% if program.whatIs.intro %}
      <div class="what-is-intro">
        {% for paragraph in program.whatIs.intro %}
        <p>{{ paragraph }}</p>
        {% endfor %}
      </div>
      {% endif %}

      {% if program.whatIs.detail %}
      <div class="expandable-detail">
        <button class="expandable-toggle" aria-expanded="false">
          <span class="toggle-icon" aria-hidden="true"></span>
          <span class="toggle-text">{{ program.whatIs.detailTitle if program.whatIs.detailTitle else "ampliar" }}</span>
        </button>
        <div class="expandable-content" hidden>
          <p>{{ program.whatIs.detail | replace('\n\n', '</p><p>') | safe }}</p>
          {% if program.whatIs.detailQuote %}
          <p class="quote-large">{{ program.whatIs.detailQuote }}</p>
          {% endif %}
        </div>
      </div>
      {% endif %}

      {% if program.whatIs.quote1 %}
      <p class="quote-large">{{ program.whatIs.quote1 }}</p>
      {% endif %}

      {% if program.whatIs.forWhom %}
      <div class="what-is-section">
        {% if program.whatIs.forWhom.title %}
        <h2 class="section-title">{{ program.whatIs.forWhom.title }}</h2>
        {% endif %}
        {% if program.whatIs.forWhom.intro %}
        <p class="what-is-intro-text">{{ program.whatIs.forWhom.intro }}</p>
        {% endif %}

        {% if program.whatIs.forWhom.detail %}
        <div class="expandable-detail">
          <button class="expandable-toggle" aria-expanded="false">
            <span class="toggle-icon" aria-hidden="true"></span>
            <span class="toggle-text">{{ program.whatIs.forWhom.detailTitle if program.whatIs.forWhom.detailTitle else "ampliar" }}</span>
          </button>
          <div class="expandable-content" hidden>
            <p>{{ program.whatIs.forWhom.detail }}</p>
          </div>
        </div>
        {% endif %}
      </div>
      {% endif %}

      {% if program.whatIs.helps %}
      <div class="what-is-section">
        {% if program.whatIs.helps.title %}
        <h2 class="section-title">{{ program.whatIs.helps.title }}</h2>
        {% endif %}
        {% if program.whatIs.helps.intro %}
        <p class="what-is-intro-text">{{ program.whatIs.helps.intro }}</p>
        {% endif %}

        {% if program.whatIs.helps.detailIntro %}
        <div class="expandable-detail">
          <button class="expandable-toggle" aria-expanded="false">
            <span class="toggle-icon" aria-hidden="true"></span>
            <span class="toggle-text">{{ program.whatIs.helps.detailTitle if program.whatIs.helps.detailTitle else "detalle" }}</span>
          </button>
          <div class="expandable-content" hidden>
            {% if program.whatIs.helps.detailIntro %}
            <p>{{ program.whatIs.helps.detailIntro }}</p>
            {% endif %}
            {% if program.whatIs.helps.items %}
            <ul class="expandable-list">
              {% for item in program.whatIs.helps.items %}
              <li>{{ item }}</li>
              {% endfor %}
            </ul>
            {% endif %}
          </div>
        </div>
        {% elif program.whatIs.helps.items %}
        <div class="card-items-grid">
          {% for item in program.whatIs.helps.items %}
          <div class="card-item">
            <p>{{ item }}</p>
          </div>
          {% endfor %}
        </div>
        {% endif %}
      </div>
      {% endif %}

      {% if program.whyItWorks %}
      <div class="what-is-section">
        {% if program.whyItWorks.title %}
        <h2 class="section-title">{{ program.whyItWorks.title }}</h2>
        {% endif %}
        {% if program.whyItWorks.intro %}
        <p class="what-is-intro-text">{{ program.whyItWorks.intro }}</p>
        {% endif %}
        {% if program.whyItWorks.detailIntro %}
        <div class="expandable-detail">
          <button class="expandable-toggle" aria-expanded="false">
            <span class="toggle-icon" aria-hidden="true"></span>
            <span class="toggle-text">{{ program.whyItWorks.detailTitle if program.whyItWorks.detailTitle else "ampliar" }}</span>
          </button>
          <div class="expandable-content" hidden>
            <p>{% if program.whyItWorks.detail %}{{ program.whyItWorks.detail }} {% endif %}{{ program.whyItWorks.detailIntro }}</p>
            {% if program.whyItWorks.items %}
            <ul class="expandable-list">
              {% for item in program.whyItWorks.items %}
              <li>{{ item }}</li>
              {% endfor %}
            </ul>
            {% endif %}
          </div>
        </div>
        {% elif program.whyItWorks.items %}
        <div class="card-items-grid">
          {% for item in program.whyItWorks.items %}
          <div class="card-item">
            <p>{{ item }}</p>
          </div>
          {% endfor %}
        </div>
        {% endif %}
        {% if program.whyItWorks.detail and not program.whyItWorks.detailIntro %}
        <div class="expandable-detail">
          <button class="expandable-toggle" aria-expanded="false">
            <span class="toggle-icon" aria-hidden="true"></span>
            <span class="toggle-text">{{ program.whyItWorks.detailTitle if program.whyItWorks.detailTitle else "ampliar" }}</span>
          </button>
          <div class="expandable-content" hidden>
            <p>{{ program.whyItWorks.detail }}</p>
          </div>
        </div>
        {% endif %}
        {% if program.whyItWorks.conclusion %}
        <p>{{ program.whyItWorks.conclusion }}</p>
        {% endif %}
        {% if program.whyItWorks.impact %}
        <p class="quote-large">{{ program.whyItWorks.impact }}</p>
        {% endif %}
        {% if program.whyItWorks.quote %}
        <p class="quote-large">{{ program.whyItWorks.quote }}</p>
        {% endif %}
      </div>
      {% endif %}

      {% if program.whatIs.quote2 %}
      <p class="quote-large">{{ program.whatIs.quote2 }}</p>
      {% endif %}

      {% if program.whatIs.trainingItems %}
      <div class="what-is-section">
        <div class="card-items-grid">
          {% for item in program.whatIs.trainingItems %}
          <div class="card-item">
            <p>{{ item }}</p>
          </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      {% if program.whatIs.conclusion %}
      <p class="what-is-conclusion">{{ program.whatIs.conclusion }}</p>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% if program.pillars %}
<section class="program-pillars">
  <div class="container">
    {% if program.pillarsTitle %}
    <h2 class="section-title">{{ program.pillarsTitle }}</h2>
    {% endif %}
    {% if program.pillarsSubtitle %}
    <p class="program-hero-subtitle">{{ program.pillarsSubtitle }}</p>
    {% endif %}
    <div class="pillars-grid">
      {% for pillar in program.pillars %}
      <div class="pillar-card">
        {% if pillar.icon %}
        <div class="pillar-icon">
          <i class="{{ pillar.icon }}" aria-hidden="true"></i>
        </div>
        {% endif %}
        {% if pillar.title %}
        <h3 class="pillar-title">{{ pillar.title }}</h3>
        {% endif %}
        {% if pillar.description %}
        <p class="pillar-description">{{ pillar.description }}</p>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% if program.sessionStructure %}
<section class="program-session">
  <div class="container">
    {% if program.sessionStructure.title %}
    <h2>{{ program.sessionStructure.title }}</h2>
    {% endif %}
    {% if program.sessionStructure.intro %}
    <p class="program-hero-subtitle">{{ program.sessionStructure.intro }}</p>
    {% endif %}
    <div class="session-grid">
      <div class="session-details">
        {% if program.sessionStructure.duration %}
        <p class="session-duration">{{ program.sessionStructure.duration }}</p>
        {% endif %}
        {% if program.sessionStructure.activities %}
        <ul class="session-activities">
          {% for activity in program.sessionStructure.activities %}
          <li>{{ activity }}</li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      {% if program.sessionStructure.timeline %}
      <div class="session-timeline">
        <p class="session-duration"><strong>Estructura de las sesiones</strong></p>
        <ul class="timeline-list">
          {% for item in program.sessionStructure.timeline %}
          <li class="timeline-item">
            <span class="timeline-title">{{ item.title }}</span>
            <span class="timeline-description">{{ item.description }}</span>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% elif program.sessionStructure.highlight %}
      <div class="session-highlight">
        <p class="quote-medium">{{ program.sessionStructure.highlight }}</p>
      </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% if program.outcomes %}
<section class="program-outcomes">
  <div class="container">
    {% if program.outcomes.quote %}
    <p class="quote-large">{{ program.outcomes.quote }}</p>
    {% endif %}

    {% if program.outcomes.intro %}
    <p class="outcomes-intro">{{ program.outcomes.intro }}</p>
    {% endif %}

    {% if program.outcomes.title %}
    <h2>{{ program.outcomes.title }}</h2>
    {% endif %}
    {% if program.outcomes.items %}
    <ul class="outcomes-list">
      {% for outcome in program.outcomes.items %}
      <li class="outcome-item">{{ outcome }}</li>
      {% endfor %}
    </ul>
    {% endif %}
  </div>
</section>
{% endif %}

{% if program.testimonials %}
<section class="program-testimonials">
  <div class="container">
    <div class="testimonials-carousel">
      <div class="testimonials-track">
        {% for testimonial in program.testimonials %}
        <div class="testimonial-slide">
          <div class="testimonial-content">
            <i class="fa-solid fa-quote-left testimonial-quote-icon" aria-hidden="true"></i>
            {% if testimonial.quote %}
            <blockquote class="testimonial-quote">
              <p>{{ testimonial.quote | safe | replace('\n', '</p><p>') }}</p>
            </blockquote>
            {% endif %}
            {% if testimonial.author %}
            <cite class="testimonial-author">— {{ testimonial.author }}</cite>
            {% endif %}
          </div>
        </div>
        {% endfor %}
      </div>

      {% if program.testimonials | length > 1 %}
      <div class="carousel-dots">
        {% for testimonial in program.testimonials %}
        <button class="carousel-dot {% if loop.index == 1 %}active{% endif %}" aria-label="Go to testimonial {{ loop.index }}" data-slide="{{ loop.index - 1 }}"></button>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">¿Te interesa?</h2>
      <p class="cta-description">Contacta con nosotros para más información</p>
      <a href="{{ '/contacto/' | url }}" class="button button-primary">Contáctanos</a>
    </div>
  </div>
</section>

{% block schema %}
  {% include "schemas/psychological-treatment.njk" %}
{% endblock %}
