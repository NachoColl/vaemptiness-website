---
layout: base.njk
bodyClass: program-page
pagination:
  data: collections.programsFromFiles
  size: 1
  alias: program
permalink: /{{ program.slug }}/
title: "{{ program.name }} - vaemptîness"
---

<section class="program-hero">
  <div class="container">
    <div class="program-hero-content">
      <h1 class="program-hero-title">{{ program.hero.title }}</h1>
      <p class="program-hero-subtitle">{{ program.hero.subtitle }}</p>
      <p class="program-hero-description">{{ program.hero.description }}</p>
    </div>
  </div>
</section>

{% if program.whatIs %}
<section class="program-what-is">
  <div class="container">
    <div class="what-is-content centered">
      <h2 class="section-title">{{ program.whatIs.title }}</h2>

      <div class="what-is-intro">
        {% for paragraph in program.whatIs.intro %}
        <p>{{ paragraph }}</p>
        {% endfor %}
      </div>

      {% if program.whatIs.quote1 %}
      <p class="quote-large">{{ program.whatIs.quote1 }}</p>
      {% endif %}

      <div class="what-is-section">
        <h3>{{ program.whatIs.helps.title }}</h3>
        {% if program.whatIs.helps.subtitle %}
        <p class="what-is-subtitle">{{ program.whatIs.helps.subtitle }}</p>
        {% endif %}
        <div class="card-items-grid">
          {% for item in program.whatIs.helps.items %}
          <div class="card-item">
            <p>{{ item }}</p>
          </div>
          {% endfor %}
        </div>
      </div>

      {% if program.whatIs.quote2 %}
      <p class="quote-large">{{ program.whatIs.quote2 }}</p>
      {% endif %}

      {% if program.whatIs.trainingItems %}
      <div class="what-is-section">
        <div class="card-items-grid">
          {% for item in program.whatIs.trainingItems %}
          <div class="card-item">
            <p>{{ item }}</p>
          </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      {% if program.whatIs.conclusion %}
      <p class="what-is-conclusion">{{ program.whatIs.conclusion }}</p>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% if program.preTeen %}
<section class="pre-teen-section">
  <div class="container">
    <h2 class="section-title">{{ program.preTeen.title }}</h2>
    <p class="pre-teen-intro">{{ program.preTeen.intro }}</p>

    <div class="teen-content-block">
      <h3>{{ program.preTeen.addresses.title }}</h3>
      <ul class="teen-list">
        {% for item in program.preTeen.addresses.items %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="teen-content-block">
      <h3>{{ program.preTeen.approach.title }}</h3>
      <ul class="teen-list">
        {% for item in program.preTeen.approach.items %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="teen-content-block">
      <h3>{{ program.preTeen.outcomes.title }}</h3>
      <ul class="teen-list">
        {% for item in program.preTeen.outcomes.items %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
{% endif %}

{% if program.teen %}
<section class="teen-section">
  <div class="container">
    <h2 class="section-title">{{ program.teen.title }}</h2>
    <p class="teen-intro">{{ program.teen.intro }}</p>

    <div class="teen-content-block">
      <h3>{{ program.teen.addresses.title }}</h3>
      <ul class="teen-list">
        {% for item in program.teen.addresses.items %}
        <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="teen-content-block">
      <h3>{{ program.teen.sessionStructure.title }}</h3>
      <p class="teen-duration">Duración: {{ program.teen.sessionStructure.duration }}</p>
      <ul class="teen-list">
        {% for activity in program.teen.sessionStructure.activities %}
        <li>{{ activity }}</li>
        {% endfor %}
      </ul>
    </div>

    {% if program.teen.note %}
    <p class="teen-note">{{ program.teen.note }}</p>
    {% endif %}
  </div>
</section>
{% endif %}

{% if program.core %}
<section class="core-section">
  <div class="container">
    <h2 class="section-title">{{ program.core.title }}</h2>
    <p class="core-subtitle">{{ program.core.subtitle }}</p>
    <ul class="core-principles">
      {% for principle in program.core.principles %}
      <li class="core-principle">{{ principle }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endif %}

{% if program.pillars %}
<section class="program-pillars">
  <div class="container">
    <h2 class="section-title">Pilares del Programa</h2>
    <div class="pillars-grid">
      {% for pillar in program.pillars %}
      <div class="pillar-card">
        <div class="pillar-icon">
          <i class="{{ pillar.icon }}" aria-hidden="true"></i>
        </div>
        <h3 class="pillar-title">{{ pillar.title }}</h3>
        <p class="pillar-description">{{ pillar.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% if program.sessionStructure %}
<section class="program-session">
  <div class="container">
    <h2>{{ program.sessionStructure.title }}</h2>
    <div class="session-grid">
      <div class="session-details">
        <p class="session-duration"><strong>Duración:</strong> {{ program.sessionStructure.duration }}</p>
        <ul class="session-activities">
          {% for activity in program.sessionStructure.activities %}
          <li>{{ activity }}</li>
          {% endfor %}
        </ul>
      </div>
      {% if program.philosophy %}
      <div class="session-philosophy">
        <p class="quote-medium">{{ program.philosophy }}</p>
      </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% if program.outcomes %}
<section class="program-outcomes">
  <div class="container">
    {% if program.outcomes.quote %}
    <p class="quote-large">{{ program.outcomes.quote }}</p>
    {% endif %}

    {% if program.outcomes.intro %}
    <p class="outcomes-intro">{{ program.outcomes.intro }}</p>
    {% endif %}

    <h2>{{ program.outcomes.title }}</h2>
    <ul class="outcomes-list">
      {% for outcome in program.outcomes.items %}
      <li class="outcome-item">{{ outcome }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endif %}

{% if program.whyItWorks %}
<section class="why-it-works">
  <div class="container">
    <h2 class="section-title">{{ program.whyItWorks.title }}</h2>
    <p class="why-intro">{{ program.whyItWorks.intro }}</p>
    <p class="why-approach">{{ program.whyItWorks.approach }}</p>
    <p class="why-conclusion">{{ program.whyItWorks.conclusion }}</p>
    <p class="why-impact">{{ program.whyItWorks.impact }}</p>
  </div>
</section>
{% endif %}

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">¿Interesado en este programa?</h2>
      <p class="cta-description">Contacta con nosotros para más información</p>
      <a href="{{ '/contacto/' | url }}" class="button button-primary">Contáctanos</a>
    </div>
  </div>
</section>

{% block schema %}
  {% include "schemas/psychological-treatment.njk" %}
{% endblock %}
