---
layout: base.njk
bodyClass: blog-post-page
pagination:
  data: collections.blogFromFiles
  size: 1
  alias: post
permalink: /blog/{{ post.slug }}/
title: "{{ post.title }} - Blog vaemptîness"
---

<article class="blog-post">
  <section class="post-hero">
    <div class="container">
      <div class="post-meta">
        <span class="post-author">{{ post.author }}</span>
        <span class="post-separator">•</span>
        <span class="post-date">{{ post.date }}</span>
      </div>
      <h1 class="post-title">{{ post.title }}</h1>
      <p class="post-excerpt">{{ post.excerpt }}</p>

      {% if post.tags %}
      <div class="post-tags">
        {% for tag in post.tags %}
        <span class="tag">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </section>

  {% if post.content.sections %}
  <section class="post-body">
    <div class="container">
      <div class="content-section centered">
        {% for section in post.content.sections %}
        <div class="post-section">
          <h2>{{ section.title }}</h2>
          {% if section.intro %}
          <p>{{ section.intro | safe }}</p>
          {% endif %}
          {% if section.items %}
          <ul class="blog-list-items">
            {% for item in section.items %}
            <li>{{ item | safe }}</li>
            {% endfor %}
          </ul>
          {% endif %}
          {% if section.closing %}
          <p>{{ section.closing | safe }}</p>
          {% endif %}
          {% if section.content %}
          <p>{{ section.content | safe }}</p>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  {% if post.content.conclusion or post.content.cta %}
  <section class="post-conclusion-section">
    <div class="container">
      <div class="content-section centered">
        {% if post.content.conclusion %}
        <p>{{ post.content.conclusion | safe }}</p>
        {% endif %}
        {% if post.content.cta %}
        <p class="quote-large">{{ post.content.cta | safe }}</p>
        {% endif %}
      </div>
    </div>
  </section>
  {% endif %}

  <section class="post-footer-section">
    <div class="container">
      <div class="content-section centered">
        <div class="post-author-card">
          <p class="author-label">Escrito por</p>
          <p class="author-name">{{ post.author }}</p>
          <p class="author-role">Fundadora de vaemptîness</p>
        </div>
      </div>
    </div>
  </section>
</article>

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">¿Listo para crear espacio mental?</h2>
      <p class="cta-description">Contacta con nosotros para comenzar tu entrenamiento mental</p>
      <a href="{{ '/contacto/' | url }}" class="button button-primary">Contáctanos</a>
    </div>
  </div>
</section>

{% block schema %}
  {% include "schemas/blog-posting.njk" %}
{% endblock %}
