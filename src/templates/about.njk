---
layout: base.njk
permalink: /about/
---

<section class="hero">
  <div class="container">
    <h1 class="hero-title">{{ about.hero.title }}</h1>
    <p class="hero-subtitle">{{ about.hero.subtitle }}</p>
  </div>
</section>

<section class="services">
  <div class="container">
    <div class="services-grid">
      {% for service in services.services %}
      <div class="service-column">
        <h3>{{ service.title }}</h3>
        <ul>
          {% for item in service.items %}
          <li>{{ item }}</li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="gallery">
  <div class="container">
    <div class="image-grid">
      {% for image in about.images %}
      <div class="image-item">
        <img src="{{ image }}" alt="Studio" loading="lazy">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="awards">
  <div class="container">
    <h2>Reconocimientos</h2>
    <div class="awards-grid">
      {% for award in awards.awards %}
      <div class="award-item">
        <img src="{{ award.logo }}" alt="{{ award.name }}">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="clients">
  <div class="container">
    <h2>Colaboraciones</h2>
    <div class="clients-grid">
      {% for client in clients.clients %}
      <div class="client-item">
        <img src="{{ client.logo }}" alt="{{ client.name }}">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="cta">
  <div class="container">
    <h2>Trabajemos juntos</h2>
    <a href="mailto:{{ contact.email }}" class="cta-link">{{ contact.email }}</a>
  </div>
</section>
