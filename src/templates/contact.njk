---
layout: base.njk
permalink: /contact/
bodyClass: contact-body
---

<section class="contact-page">
  <div class="container">
    <h1 class="contact-title contact-animate">{{ contact.hero.title }}</h1>

    <form action="{{ contact.form.getformEndpoint }}" method="POST" class="contact-form-grid" id="contact-form">
      <div class="form-row contact-animate">
        <div class="form-group">
          <input type="text" name="name" id="name" placeholder="Name" required>
        </div>
        <div class="form-group">
          <input type="email" name="email" id="email" placeholder="Email" required>
        </div>
      </div>

      <div class="form-row contact-animate">
        <div class="form-group">
          <input type="tel" name="phone" id="phone" placeholder="Phone">
        </div>
        <div class="form-group">
          <select name="topic" id="topic" required>
            <option value="" disabled selected>Topic</option>
            {% for topic in contact.form.topics %}
            <option value="{{ topic }}">{{ topic }}</option>
            {% endfor %}
          </select>
        </div>
      </div>

      <div class="form-group form-group-full contact-animate">
        <textarea name="message" id="message" placeholder="Message" rows="4" required></textarea>
      </div>

      <button type="submit" class="btn-send contact-animate">Send</button>
    </form>

    <div class="contact-footer contact-animate">
      <div class="contact-details">
        <a href="mailto:{{ contact.email }}" class="contact-email">{{ contact.email }}</a>
      </div>
    </div>
  </div>
</section>

<script src="{{ '/assets/js/contact-form.js' | url }}"></script>
