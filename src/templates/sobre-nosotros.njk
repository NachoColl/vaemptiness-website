---
layout: base.njk
---
{% set pageData = pages["sobre-nosotros"].content %}

<section class="page-hero">
  <div class="container">
    <h1 class="page-title">{{ pageData.hero.title }}</h1>
    <p class="page-subtitle">{{ pageData.hero.subtitle }}</p>
  </div>
</section>

<section class="about-intro">
  <div class="container">
    <div class="content-section centered">
      <h2>{{ pageData.intro.title }}</h2>
      <p>{{ pageData.intro.paragraphs[0] }}</p>
      <p>{{ pageData.intro.paragraphs[1] }}</p>
      <p class="quote-large">"No se trata de pensar más, sino mejor"</p>
      <p>{{ pageData.intro.paragraphs[2] }}</p>
    </div>
  </div>
</section>

<section class="about-brand-philosophy">
  <div class="container">
    <div class="content-section centered">
      <h2>{{ pageData.brandPhilosophy.title }}</h2>
      <p>{{ pageData.brandPhilosophy.content }}</p>
      <blockquote class="philosophy-quote">
        <p>"{{ pageData.brandPhilosophy.quote }}"</p>
        <cite>— {{ pageData.brandPhilosophy.author }}</cite>
      </blockquote>
    </div>
  </div>
</section>

<section class="about-mission">
  <div class="container">
    <div class="content-section centered">
      <h2>{{ pageData.mission.title }}</h2>
      <p>{{ pageData.mission.content }}</p>
    </div>
  </div>
</section>

<section class="about-services">
  <div class="container">
    <h2 class="section-title centered">{{ pageData.services.title }}</h2>
    <ul class="services-grid-list">
      {% for service in pageData.services.items %}
      <li class="service-grid-item">{{ service }}</li>
      {% endfor %}
    </ul>
  </div>
</section>

<section class="about-team">
  <div class="container">
    <div class="content-section centered">
      <h2>{{ pageData.team.title }}</h2>
      <p class="team-description">{{ pageData.team.description }}</p>
    </div>

    <div class="team-founder">
      <div class="founder-card">
        <div class="founder-image">
          <img src="{{ pageData.team.founder.image | url }}" alt="{{ pageData.team.founder.name }}">
        </div>
        <div class="founder-info">
          <h3 class="founder-name">{{ pageData.team.founder.name }}</h3>
          <p class="founder-role">{{ pageData.team.founder.role }}</p>
          {% if pageData.team.founder.linkedin %}
          <a href="{{ pageData.team.founder.linkedin }}" class="founder-linkedin" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
            <span>LinkedIn</span>
          </a>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="team-members">
      {% for member in pageData.team.members %}
      <div class="member-card">
        <div class="member-image">
          <img src="{{ member.image | url }}" alt="{{ member.name }}">
        </div>
        <div class="member-info">
          <h4 class="member-name">{{ member.name }}</h4>
          <p class="member-role">{{ member.role }}</p>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="content-section centered">
      <p class="team-purpose">{{ pageData.team.purpose }}</p>
    </div>
  </div>
</section>

<section class="about-trajectory">
  <div class="container">
    <div class="content-section centered">
      <h2>{{ pageData.trajectory.title }}</h2>

      <p>{{ pageData.trajectory.paragraphs[0] }}</p>
      <div class="teachers-list">
        {% for teacher in pageData.trajectory.teachers %}
        <div class="teacher-item">
          <img src="{{ teacher.image | url }}" alt="{{ teacher.name }}" class="teacher-avatar teacher-avatar-clickable" data-fullsize="{{ teacher.image | url }}">
          <span class="teacher-name">{{ teacher.name }}</span>
        </div>
        {% endfor %}
      </div>

      <!-- Image lightbox -->
      <div id="image-lightbox" class="lightbox">
        <span class="lightbox-close">&times;</span>
        <img class="lightbox-content" id="lightbox-img" alt="">
      </div>

      <p>{{ pageData.trajectory.paragraphs[1] }}</p>

      <p>{{ pageData.trajectory.paragraphs[2] }}</p>

      <div class="observations-text">
        {% for observation in pageData.trajectory.observations %}
        {{ observation }}<br>
        {% endfor %}
      </div>

      <p>{{ pageData.trajectory.paragraphs[3] }}</p>
    </div>
  </div>
</section>

<script>
  // Teacher avatar lightbox functionality
  document.addEventListener('DOMContentLoaded', function() {
    const lightbox = document.getElementById('image-lightbox');
    const lightboxImg = document.getElementById('lightbox-img');
    const closeBtn = document.querySelector('.lightbox-close');
    const clickableAvatars = document.querySelectorAll('.teacher-avatar-clickable');

    // Open lightbox on avatar click
    clickableAvatars.forEach(function(avatar) {
      avatar.addEventListener('click', function() {
        lightbox.style.display = 'block';
        lightboxImg.src = this.getAttribute('data-fullsize');
        lightboxImg.alt = this.alt;
      });
    });

    // Close lightbox on X button click
    if (closeBtn) {
      closeBtn.addEventListener('click', function() {
        lightbox.style.display = 'none';
      });
    }

    // Close lightbox on background click
    lightbox.addEventListener('click', function(e) {
      if (e.target === lightbox) {
        lightbox.style.display = 'none';
      }
    });

    // Close lightbox on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && lightbox.style.display === 'block') {
        lightbox.style.display = 'none';
      }
    });
  });
</script>

{% block schema %}
  {% include "schemas/person.njk" %}
{% endblock %}
