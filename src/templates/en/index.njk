---
layout: base.njk
bodyClass: home-page
lang: en
permalink: /en/
---

<!-- Background blue circles -->
<div class="home-bg-circles">
  <div class="home-bg-circle"></div>
  <div class="home-bg-circle"></div>
  <div class="home-bg-circle"></div>
  <div class="home-bg-circle"></div>
</div>

<!-- Custom cursor with down arrow -->
<div class="custom-cursor" id="customCursor">
  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 4L12 20M12 20L6 14M12 20L18 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</div>

<section class="hero" id="heroSection">
  <div class="container">
    <h1 class="hero-title">
      <span class="hero-name">Mateo Coll</span>
      <span class="hero-role">Editor</span>
      <span class="hero-role">Sound Designer</span>
    </h1>
  </div>

  <a href="#projects" class="scroll-indicator" aria-label="Scroll down">
    <svg width="24" height="32" viewBox="0 0 24 32" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2L12 28M12 28L6 22M12 28L18 22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </a>
</section>

<section class="work-grid" id="projects">
  <div class="container">
    <nav class="category-filters">
      <button class="filter-btn active" data-category="all">All</button>
      <span class="filter-separator">|</span>
      <button class="filter-btn" data-category="short-films">Short Films</button>
    </nav>

    <div class="projects-grid">
      {% for project in projects_en.projects %}
      <article class="project-card" data-project="{{ project.slug }}" data-category="{{ project.category }}">
        <a href="{{ ('/en/project/' + project.slug + '/') | url }}">
          <div class="media-container">
            <img class="thumbnail" src="{{ project.thumbnail | url }}" alt="{{ project.title }}" loading="lazy">
            {% if project.previewGif %}
            <img class="preview-gif" src="{{ project.previewGif | url }}" alt="{{ project.title }} preview" loading="eager">
            {% elif project.previewVideo %}
            <video class="preview-video" muted loop playsinline preload="none">
              <source src="{{ project.previewVideo | url }}" type="video/mp4">
            </video>
            {% endif %}
          </div>
          <h3 class="project-title">{{ project.title }}</h3>
        </a>
      </article>
      {% endfor %}
    </div>
  </div>
</section>

<script src="{{ '/assets/js/category-filter.js' | url }}"></script>
<script src="{{ '/assets/js/video-preview.js' | url }}"></script>

<script>
  // Custom cursor for hero section
  (function() {
    const cursor = document.getElementById('customCursor');
    const hero = document.getElementById('heroSection');
    const header = document.querySelector('.site-header');

    if (!cursor || !hero) return;

    hero.classList.add('custom-cursor-active');

    // Function to check if mouse is inside hero but NOT over the header
    function isMouseInsideHero(x, y) {
      const heroRect = hero.getBoundingClientRect();
      const headerRect = header ? header.getBoundingClientRect() : null;

      // Check if inside hero bounds
      const insideHero = x >= heroRect.left && x <= heroRect.right && y >= heroRect.top && y <= heroRect.bottom;

      // Check if over the header
      const overHeader = headerRect && y >= headerRect.top && y <= headerRect.bottom;

      return insideHero && !overHeader;
    }

    // Move cursor with mouse and check if inside hero
    document.addEventListener('mousemove', (e) => {
      cursor.style.left = e.clientX + 'px';
      cursor.style.top = e.clientY + 'px';

      // Check if mouse is inside hero on every move
      if (isMouseInsideHero(e.clientX, e.clientY)) {
        cursor.classList.add('visible');
      } else {
        cursor.classList.remove('visible');
      }
    });

    // Click to scroll to projects
    hero.addEventListener('click', () => {
      document.getElementById('projects').scrollIntoView({ behavior: 'smooth' });
    });
  })();
</script>
