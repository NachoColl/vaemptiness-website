---
layout: base.njk
---
{% set pageData = pages.faq.content %}

<section class="page-hero">
  <div class="container">
    <h1 class="page-title">{{ pageData.hero.title }}</h1>
    <p class="page-subtitle">{{ pageData.hero.subtitle }}</p>
  </div>
</section>

<section class="faq-section">
  <div class="container">
    {% for category in pageData.categories %}
    <div class="faq-category" data-category-id="{{ category.id }}">
      <div class="faq-category-header">
        <h2 class="faq-category-title">{{ category.name }}</h2>
        <p class="faq-category-description">{{ category.description }}</p>
      </div>

      <div class="faq-list">
        {% for item in category.questions %}
        <div class="faq-item" data-faq-id="{{ item.id }}">
          <button class="faq-question" aria-expanded="false" aria-controls="answer-{{ item.id }}">
            <span class="faq-question-text">{{ item.question }}</span>
            <svg class="faq-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="faq-answer" id="answer-{{ item.id }}">
            <div class="faq-answer-content">
              <p>{{ item.answer }}</p>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">¿Tienes más preguntas?</h2>
      <p class="cta-description">No dudes en contactarnos</p>
      <a href="{{ '/contacto/' | url }}" class="button button-primary">Contáctanos</a>
    </div>
  </div>
</section>

<script src="{{ '/assets/js/faq-accordion.js' | url }}"></script>

{% block schema %}
  {% include "schemas/faq-page.njk" %}
{% endblock %}
