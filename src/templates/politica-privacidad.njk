---
layout: base.njk
---
{% set pageData = pages["politica-privacidad"].content %}

<section class="page-hero">
  <div class="container">
    <h1 class="page-title">{{ pageData.hero.title }}</h1>
  </div>
</section>

<section class="legal-content">
  <div class="container">
    <div class="legal-text">
      {% for section in pageData.sections %}
      <h2>{{ section.title }}</h2>
      {{ section.content | safe }}
      {% endfor %}

      <div class="legal-footer">
        {{ pageData.footer | safe }}
      </div>
    </div>
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{{ pageData.cta.title }}</h2>
      <p class="cta-description">{{ pageData.cta.description }}</p>
      <a href="{{ pageData.cta.buttonUrl | url }}" class="button button-primary">{{ pageData.cta.buttonText }}</a>
    </div>
  </div>
</section>
